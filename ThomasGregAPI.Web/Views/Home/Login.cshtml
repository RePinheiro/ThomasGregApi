@{
    ViewBag.Title = "LoginUsuario";
}

<h2>Entrar</h2>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="row">
                <div class="col-xs-12">
                    <h5>Usuario</h5>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <input type="text" id="Usuario" style="width: 100%">
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <h5>Senha</h5>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <input type="password" id="Senha" style="width: 100%">
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-xs-12 text-center">
                    <button onclick="Logar()" type="button" class="btn btn-primary" style="background-color: #222222; width: 100%" id="Login">Entrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function Logar() {
        $.ajax({
            url: 'EfetuarLogin',
            crossDomain: true,
            type: 'POST',
            data: {
                Usuario: $("#Usuario").val(),
                Senha: $("#Senha").val()
            },
            dataType: 'json',
            success: function (data) {

                if (data.Status == 200) {
                    location.href = "Index";
                }
                else {
                    alert(data.Conteudo)
                }
            },
            error: function () {
            }
        });
    }

</script>
