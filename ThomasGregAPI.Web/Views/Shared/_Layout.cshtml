@using ThomasGregAPI.Web.Utils;
@using ThomasGregAPI.Model.Entidades;
@{
    var Usuario = (SessionManager.UsuarioModel as UsuarioModel);
}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet"
          href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/styles/default.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/highlight.min.js"></script>

</head>

<body>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ThomasGregApi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Documentação", "Documentacao", "Documentacao", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Api Referencia", "ApiReferencia", "ApiReferencia", new { area = "" }, null)</li>
                </ul>
                @if (Usuario == null)
                {
                    <div id="LoginTemplate">
                        <form class="form-inline my-4 my-lg-0 text-right">
                            <a class="btn btn-outline-light" id="Login" href='@Url.Action("LogIn", "Home")' style="margin-top: 14px; background: none; color: white" type="button">Entrar</a>
                            <a class="btn btn-outline-light" id="Sigin" href='@Url.Action("Sigin", "Home")' style="margin-top: 14px; background: none; color: white" type="button">Registrar</a>
                        </form>
                    </div>
                }
                else
                {
                    <div id="LogadoTemplate">
                        <form class="form-inline my-4 my-lg-0 text-right">
                            <a class="btn btn-outline-light" id="Login" href='@Url.Action("AlterarSenha", "Home")' style="margin-top: 8px; background: none; color: white" type="button">Editar Senha</a>
                            <a class="btn btn-outline-light" id="Login" href='@Url.Action("DeletarUsuario", "Home")' style="margin-top: 8px; background: none; color: white" type="button">Deletar Conta</a>
                        </form>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
